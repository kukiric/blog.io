{{> header }}
<hr>
<div class="row">
    <!-- Menu lateral -->
    <div class="col-lg-4 col-md-12 order-lg-2">
        {{> sidebar }}
    </div>
    <!-- Área dos posts -->
    <div class="col-lg-8 col-md-12 order-lg-1">
        {{#each posts}}
            {{> post }}
            <hr>
        {{/each}}
