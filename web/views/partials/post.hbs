<div class="post">
    <h2>{{ title }}</h2>
    <span class="h5">Publicado por: {{ creator.fullName }}</span>
    <br>
    <span>Postado em: {{ dateTime createdAt }}</span>
    <br><br>
    <div>{{{ markdown content }}}</div>
    {{#if isLong }}
    <div class="d-flex flex-column justify-content-center">
        <div class="text-muted h3 text-center">. . . . .</div>
        <button class="btn btn-primary col-xl-2 col-lg-4 col-md-6 mx-auto">Ler mais</button>
    </div>
    {{/if }}
</div>